<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Scripts/jquery.countdown2.1.0/css/jquery.countdown.css")" rel="stylesheet" type="text/css"/>
    <style>
    .navbar-nav-centered {
        position: absolute;
        left: 50%;
        transform: translatex(-50%);
        font-family:Arial;
        font-size:1.5em;
        font-weight:bold;
        padding-top:25px;
    }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color:#2980A7; border:none; color:white;">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="#"><img src="/Content/Images/logo.png" height="40" /></a></li>
            </ul>
            <ul class="nav navbar-nav navbar-nav-centered">
                <li>@ViewBag.Title</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" style="color:white;font-size:1.5em;font-family:Calibri; font-weight:bold;">BYU</a></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer style="background-color:#2980A7">
        <p>&copy; @DateTime.Now.Year - RedLemon</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/jquery.countdown2.1.0/js/jquery.plugin.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.countdown2.1.0/js/jquery.countdown.js")"></script>
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
